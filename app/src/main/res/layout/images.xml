<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/b_11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/b_12"
            android:scaleType="centerInside"
            android:src="@drawable/card_back"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/b_13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/card_back" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/b_21"
            android:scaleType="centerInside"
            android:src="@drawable/card_back"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"

            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/b_22"
            android:scaleType="centerInside"
            android:src="@drawable/card_back"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/b_23"
            android:scaleType="centerInside"
            android:src="@drawable/card_back"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/b_31"
            android:scaleType="centerInside"
            android:src="@drawable/card_back"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/b_32"
            android:scaleType="centerInside"
            android:src="@drawable/card_back"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/b_33"
            android:scaleType="centerInside"
            android:src="@drawable/card_back"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    
</LinearLayout>
